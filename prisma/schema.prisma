

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}
model User {
  id String @id @map("_id") @default(uuid())
  firstname String 
  lastname String 
  email String @unique
  password String 
  tasks Task[]
}

model Task {
    id String @id @map("_id") @default(uuid())
    title String
    description String
    status TaskStatus
    user User @relation(fields: [userID] , references: [id])
    userID String 
}

enum TaskStatus {
  PENDING
  STARTING
  FINISHING
}

